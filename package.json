{
  "name": "vue-qrious",
  "version": "1.2.0",
  "description": "a vue component of generating qrcode with `qrious`",
  "module": "lib/vue-qrious",
  "main": "dist/vue-qrious",
  "unpkg": "dist/vue-qrious.browser",
  "browser": "dist/vue-qrious.browser",
  "repository": "git@github.com:JounQin/vue-qrious.git",
  "author": "JounQin <admin@1stg.me>",
  "license": "MIT",
  "scripts": {
    "dev": "yarn client --watch",
    "client": "rollup -c",
    "server": "cross-env ENV=server rollup -c",
    "build": "yarn client && yarn server",
    "build:prod": "cross-env NODE_ENV=production yarn build",
    "dist": "yarn build && yarn build:prod",
    "lint": "eslint . --max-warnings=10",
    "precommit": "lint-staged"
  },
  "files": [
    "dist/*.js",
    "lib/*.js"
  ],
  "babel": {
    "presets": [
      [
        "env",
        {
          "modules": false
        }
      ],
      "stage-0"
    ],
    "plugins": [
      "syntax-jsx",
      "transform-vue-jsx"
    ]
  },
  "eslintConfig": {
    "extends": "1stg"
  },
  "eslintIgnore": [
    "dist"
  ],
  "lint-staged": {
    "*.{js,vue}": [
      "eslint . --max-warnings=10 --fix",
      "git add"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "peerDependencies": {
    "vue": "^2.0.0"
  },
  "optionalDependencies": {
    "node-qrious": "^4.0.0",
    "qrious": "^4.0.2"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-helper-vue-jsx-merge-props": "^2.0.3",
    "babel-plugin-syntax-jsx": "^6.18.0",
    "babel-plugin-transform-vue-jsx": "^3.7.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-stage-0": "^6.24.1",
    "cross-env": "^5.1.6",
    "eslint": "^5.0.0",
    "eslint-config-1stg": "^2.1.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.0",
    "prettier": "^1.13.5",
    "rollup": "^0.65.0",
    "rollup-plugin-babel": "^4.0.1",
    "rollup-plugin-uglify": "^4.0.0",
    "rollup-watch": "^4.0.0"
  }
}
